<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報</h2>

 <table border="0">
  
     <tr>
      <th>氏名</th>
      <th><%= @customer.last_name %> <%= @customer.first_name%></th>
     </tr>
     <tr>
      <th>カナ</th>
      <th><%= @customer.last_name_kana %> <%= @customer.first_name_kana %> </th>
     </tr>  
     <tr>
       <th>郵便番号</th>
       <th><%= @customer.postal_code %></th>
     </tr>
     <tr>
       <th>住所</th>
       <th><%= @customer.address %></th>
     </tr>
     <tr>
       <th>電話番号</th>
       <th><%= @customer.telephone_number %></th>
     </tr>
     <tr>
       <th>メールアドレス</th>
       <th><%= @customer.email %></th>
     </tr>
   
     <tr>
       <th>会員ステータス</th>
       <th><% if @customer.is_deleted == true %>
       <p class="text-secondary">退会</p>
       <% else %>
       <p class="text-success">有効</p>
       <% end %></th>
     </tr>
     
  </table>
  
  <%= link_to "編集する", admin_customer_edit_path, class: "btn btn-sm btn-success" %>
  <%= link_to "注文履歴一覧を見る", admin_orders_path, class: "btn btn-sm btn-primary" %>