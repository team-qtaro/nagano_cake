<div class="containar">
  <div class="row no-gutters">
    <h3 class="mt-3"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
    
      <div>会員ID     <%= @customer.id %></div>
    
    <%= form_with model: @customer, url: admin_customer_update_path, local:true do |f| %>
    
      <div class="form-group">
          <label>氏名</label>
          <%= f.text_field :last_name, class: "form-control" %>   <%= f.text_field :first_name, class: "form-control" %>
      </div>
     
      <div class="form-group">
          <label>フリガナ</label>
          <%= f.text_field :last_name_kana, class: "form-control" %>   <%= f.text_field :first_name_kana, class: "form-control" %>
      </div>
      
      <div class="form-group">
          <label>郵便番号</label>
          <%= f.text_field :postal_code, class: "form-control" %>
     </div>
       
      <div class="form-group">
        <label>住所</label>
         <%= f.text_field :address, class: "form-control" %>  
        
      </div> 
       
      <div class="form-group">
         <label>電話番号</label>
          <%= f.text_field :telephone_number, class: "form-control" %> 
      </div>
        
      <div class="form-group">
      	<label>メールアドレス</label>
          <%= f.text_field :email, class: "form-control" %> 
      </div>  
        
      <div>
        <label>会員ステータス</label>
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, '有効', value: false %>
          
          
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, '退会', value: true %>
      </div>
        
      <div>
        <%= f.submit '変更を保存', class: "btn btn-success" %> 
      </div>
    <% end %>
  
  </div>
</div>