
<%= link_to "new item", new_admin_item_path %>


  <h2>商品一覧</h2>
  <table class="table table-hover table-inverse">
	<thead>
	<tr>
	　<th>商品ID</th>
	　<th>商品名</th>
	　<th>税抜価格</th>
	　<th>ジャンル</th>
	　<th>ステータス</th>
	　<th colspan="3"></th>
	</tr>
	</thead>

	<tbody>
		<% @items.each do |item| %>
	<tr>
		<td>
			<%= item.id %>
		</td>

		<td>
			 <%= link_to admin_item_path(item.id) do %>
			 <%= item.name %>
			 <% end %>
		</td>
		<td>
			<%= item.price %>

		</td>

		<td>
			<%= item.genre.genre_name %>

		</td>
		<td>

			<% if  item.is_stopped == true %>
			 <p class="text-secondary"> 販売停止中</p>
			<% else %>
			 <p class="text-success"> 販売中</p>
			<% end %>
		</td>


	</tr>
		<% end %>
	</tbody>
</table>