
<%= link_to "new item", new_admin_item_path %> 


  <h2>商品一覧</h2>
  <table class="table table-hover table-inverse">
	  <thead>
		  <tr>
			  <th>商品ID</th>
				<th>商品名</th>
				<th colspan="3"></th>
			</tr>
		</thead>
	<tbody>
		<% @items.each do |item| %>
		<tr>
			<td>
					<%= link_to admin_item_path(item.id) do %>
					<% end %>
			</td>

			<td>
				  <%= link_to admin_item_path(item.id) do %>
				  <%= item.name %>
				  <% end %>
			</td>
			<td>
				  
			</td>
			

		</tr>
		<% end %>
	</tbody>
</table>