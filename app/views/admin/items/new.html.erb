<div class="containar">
  <div class="row no-gutters">
    <h3 class="mt-3">商品新規登録</h3>
    
    <%= form_with model: @item, url: "/admin/items", local:true do |f| %>
    
      <div class="form-group">
        <label>商品画像</label>
        <%= f.attachment_field :image %>
      </div>
     
      <div class="form-group">
        <label>商品名</label>
        <%= f.text_field :name, class: "form-control", placeholder: "商品名" %>
      </div>
      
      <div class="form-group">
      	<label>商品説明</label>
        <%= f.text_area :description, class: "form-control" %>
      </div>
       
      <div class="form-group">
        <label>ジャンル</label>
        <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, include_blank: "--選択して下さい--" %>
        
      </div> 
       
      <div class="form-group">
         <label>税抜価格</label>
        <%= f.number_field :price, class: "form-control"  %>円
      </div>
        
      <div class="form-group">
      	<label>販売ステータス</label>
      
          
            <%= f.radio_button :is_stopped, false %>
            <%= f.label :is_stopped, '販売中', value: false %>
          
          
            <%= f.radio_button :is_stopped, true %>
            <%= f.label :is_stopped, '販売停止中', value: true %>
          
        
       </div>  
        
        <%= f.submit '新規登録', class: "btn btn-success" %>
      </div>
    <% end %>
  
  </div>
</div>