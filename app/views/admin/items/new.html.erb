

<h2 class="mt-3">商品新規登録</h2>
<%= form_with model: @item, local:true do |f| %>

  <div class="form-group">
  	<label>商品名</label>
  </div>
  <%= f.text_field :name, class: "form-control" %>
  <div class="form-group">
  	<label>Opinion</label>
  </div>
  <div class="form-group">
  <%= f.text_area :description, class: "form-control" %>
  <%= f.submit '新規登録', class: "btn btn-success" %>
  </div>
<% end %>