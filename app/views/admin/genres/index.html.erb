  <div class='container'>
  <h4>ジャンル一覧、追加</h4>
    <%= form_with model:@genre,url:'/admin/genres',local:true do |t| %>
      <div class="form-group">
        <label for="genre_name">ジャンル名</label>
        <%= t.text_field:genre_name %>
        <%=t.submit '新規投稿',class: "btn btn-success" %>
      </div>
    <% end %>


    <div class='row'>
      <div class='col-md-5'>
        <table class='table'>
          <thead class="thead-light">
            <tr>
              <th></th>
              <th>ジャンル</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.genre_name %></td>
                <td></td>
                <td><%= link_to "編集する",edit_admin_genre_path(genre),class: "btn btn-success" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    </div>