<div class="album py-5 bg-light">
    <div class="container">

         <div class="texts-wrapper">
   <div class="contents-title text-center">
     <h3>商品一覧</h3>
     <div class="row">
       <% @items.each do |item| %>
         <div class="col-12 col-md-6 col-lg-4">
           <div class="card">
             <%= link_to item_path(item) do %>
             <%= attachment_image_tag item, :image, :fill, 270, 190, class: 'images', fallback: "no_image.jpg" %>
               <div class="card-body">
                 <p class="card-title"><%= item.name %></p>
             <% end %>
                 <p class="card-text">￥<%= item.price.to_s(:delimited) %>
               </div>
           </div>
         </div>
       <% end %>
     </div>
   </div>
 </div>

    </div>
    <footer class="blog-footer"><p><%= paginate @items %></p></footer>
</div>



