<div class="container">
  <h2><span class="badge bg-secondary text-white">配送先編集</span></h2>
  <%= form_with model: @send_address, local:true do |f| %>
  <div class="mb-3 row">
    <label for="send_postal_code" class="col-3 col-form-label ">郵便番号（ハイフンなし）</label>
    <div class="col-sm-4">
      <%= f.text_field :send_postal_code, class:"form-control"%>
    </div>
  </div>
  <div class="mb-3 row">
    <label for="send_address" class="col-3 col-form-label">住所</label>
    <div class="col-sm-7">
       <%= f.text_field :send_address, class:"form-control" %>
    </div>
  </div>
  <div class="mb-3 row">
    <label for="send_name" class="col-3 col-form-label">宛名</label>
    <div class="col-sm-4">
     <%= f.text_field :send_name, class:"form-control" %>
    </div>
    <div class="col-5 ">
      <%= f.submit "変更内容を保存", class:"btn btn-success mb-3" %>
    </div>
  </div>
  <% end %>
</div>