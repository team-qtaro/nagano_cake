<div class="container">
  <h2><span class="badge bg-secondary text-white mb-3">配送先一覧/登録</span></h2>
  <%= form_with model:@send_address_new, local:true do |f| %>
  <div class="mb-3 row">
    <label for="staticEmail" class="col-3 col-form-label">郵便番号（ハイフンなし）</label>
    <div class="col-sm-4">
      <%= f.text_field :send_postal_code,class:"form-control", placeholder:"0000000"%>
    </div>
  </div>
  <div class="mb-3 row">
    <label for="inputPassword" class="col-3 col-form-label">住所</label>
    <div class="col-sm-7">
       <%= f.text_field :send_address, class:"form-control",placeholder:"東京都渋谷区代々木1-1-1" %>
    </div>
  </div>
  <div class="mb-3 row">
    <label for="inputPassword" class="col-3 col-form-label">宛名</label>
    <div class="col-sm-4">
     <%= f.text_field :send_name, class:"form-control",placeholder:"令和道子" %>
    </div>
    <div class="col-5 ">
      <button type="submit" class="btn btn-primary mb-5">新規登録</button>
    </div>
  </div>
  <% end %>
  <div class="col-md-10 offset-md-1">
     <table class="table table-bordered">
    <thead class="table-secondary">
        <tr>
            <th class="col-2">郵便番号</th>
            <th class="col-4">住所</th>
            <th class="col-2">宛名</th>
            <th class="col-3"></th>
        </tr>
    </thead>
    <% @send_addresses.each do |f| %>

        <tbody>
          <tr>
            <td class="col-2　align-items-center">
              <%= f.send_postal_code  %>
            </td>
            <td class="col-4">
              <%= f.send_address %>
            </td>
            <td class="col-2">
              <%= f.send_name %>
            </td>
              <td class="col-3">
              <%= link_to edit_send_address_path(f.id), class:"btn btn-success ml-2"  do %>編集する<% end %>
              <%= link_to send_address_path(f.id),  method: :delete,class:"btn btn-danger ml-2"  do %>削除する<% end %>
            </td>
          </tr>
        </tbody>
    <% end %>
    </table>
    </div>

</div>