<div class="container">
  <div class='row'>
    <div class='col-md-7 '>
      <h2><span class="badge bg-secondary text-white mb-3">注文履歴詳細</span></h2>
      <h5>注文情報</h5>
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配達先</th>
            <td><%= @order.shipping_postal_code %><br>
                <%= @order.shipping_address %><br>
                <%= @order.shipping_name %>
            </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td></td>
          </tr>
        </thead>
      </table>
    </div>
    <div class='col-md-3'>
      <h5>請求情報</h5>
        <table class="table table-bordered ">
          <tr>
            <th>商品合計</th>
            <td></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td>８００</td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td></td>
          </tr>
        </table>
    </div>
    <div class='col-md-9'>
      <h5>注文内容</h5>
      <table class="table table-bordered ">
        <thead class="thead-light">
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </thead>
        <tbody>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tbody>
      </table>
    </div>
  </div>
</div>

