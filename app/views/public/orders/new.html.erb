<div class="container">
   <div class="row">
    <div class="row">
      <div class="ec-order-new-main">
        <h2><span class="badge bg-secondary text-white mb-3">注文情報入力</span></h2>
        <div class="field">
          <%= form_with(model: @order,url: "/orders/confirm",local:true ) do |f| %>
            <div class="form-group">
              <label>支払方法</label>
                <div class="radio">
                <label><%= f.radio_button :payment_method, :クレジットカード%>クレジットカード</label>
                </div>
              <div class="radio">
                <label><%= f.radio_button :payment_method, :銀行振込 %>銀行振込</label>
              </div>
            </div>
            <div class="form-group">
              <label>お届け先</label>
              <div class="ec-select-address">
                <table class="address-form-table">
                  <tbody>
                    <tr>
                      <div class="radio">
                        <%= radio_button_tag :address_number ,0 ,checked: true %>
                        <%= label_tag :address_number, "ご自身の住所", value: 0 %>
                        〒<%= @customer.postal_code %><br>
                          <%= @customer.address %><br>
                          <%= @customer.last_name %><%= @customer.first_name %>
                      </div>
                    </tr>
                    <tr>
                      <div class="radio">
                        <%= radio_button_tag :address_number ,1%>
                         <%= label_tag :address_number, "登録済み住所から選択", value: 1 %>
                         <%#= f.collection_select(:address_id, @addresses, :id, :full_address, include_blank: '選択してください') %>
                      </div>
                    </tr>
                    <tr>
                      <div class="radio">
                        <%= radio_button_tag :address_number ,2 %>
                        <%= label_tag :address_number,"新しい住所" ,value: 2 %>
                        <label>郵便番号（ハイフンなし）</label>
                        <%= f.text_field:shipping_postal_code, placeholder: "000000"%>
                        <label>住所</label>
                        <%= f.text_field:shipping_address,placeholder: "東京都渋谷区代々木神園町", :size => "40*40" %>
                        <label>宛名</label>
                        <%=f.text_field:shipping_name,placeholder: "令和道子" %>
                      </div>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
  	        <%=f.submit '確認画面へ進む',class: "btn btn-primary" %>
  　      <% end %>
       </div>
      </div>
    </div>
   </div>
</div>
